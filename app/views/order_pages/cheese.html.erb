<% provide(:title, 'Add Cheese') %>

<h1>Add Cheese</h1>

<div class='row-fluid'>

	<div class='span7'>
		<div class='make-line'>
			<div class='make-line-trays'>

				<div data-cheese='mozzarella'  class='make-line-tray center btn btn-small btn-secondary' data-toggle='button'>
					<span>mozzarella</span>
					<%= image_tag 'mozzarella.jpg' %>
				</div>

				<div data-cheese='parmesan' class='make-line-tray center btn btn-small btn-secondary'>
					<span>parmesan</span>
					<%= image_tag 'parmesan.jpg' %>
				</div>

				<div data-cheese='cheddar' class='make-line-tray center btn btn-small btn-secondary'>
					<span>cheddar</span>
					<%= image_tag 'cheddar.jpg' %>
				</div>

				<div data-cheese='feta' class='make-line-tray center btn btn-small btn-secondary'>
					<span>feta</span>
					<%= image_tag 'feta.jpg' %>
				</div>

				<div data-cheese='gorgonzola' class='make-line-tray center btn btn-small btn-secondary'>
					<span>gorgonzola</span>
					<%= image_tag 'gorgonzola.jpg' %>
				</div>
			</div> <!-- /div.make-line-trays -->

			<div class='center'>
				<%= render 'make_line_surface' %>
			</div> 
		</div>
	</div>

	<div class='span5'>
		<div class='explanation'>
			Addtl. info about the page. Addtl. info about the page. Addtl. info about the page. Addtl. info about the page.
		</div>
	</div>

</div>

<div class='row pull-right'>
	<div class='span6 pull-left'>
		<%= link_to "« Add Sauce", order_pages_sauce_path, class: 'btn btn-small btn-primary' %>
	</div>
	<div class='span6 pull-right'>
		<%= link_to "Add Toppings »", order_pages_toppings_path, class: 'btn btn-small btn-primary' %>
	</div>
</div>

<script type='text/javascript'>
	$(document).ready(function() {
		cheesePresenter( orderModel(), makeLineCanvasView() ).initialize();
	});
</script>

